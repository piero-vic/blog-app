<section class="flex flex-col gap-5 border p-5">
  <h2 class="text-2xl font-bold">Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {"data-turbo": "false", method: :post }) do |f| %>
    <div class="flex flex-col gap-5">
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "border" %>
      </div>

      <div class="actions">
        <%= f.submit "Send me reset password instructions", class: "self-center py-2 px-3 border rounded-xl bg-green-100" %>
      </div>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</section>
