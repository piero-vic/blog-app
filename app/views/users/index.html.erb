<h1>Users#index</h1>
<p>Find me in app/views/users/index.html.erb</p>
<ul>
  <% @users.each do |user| %>
    <li>
      <a href=<%= "/users/#{user.id}" =%>>
        <%= image_tag(user.photo, :alt => "#{user.name} Photo") %>
        <div>
          <p><%= user.name %></p>
          <p><%= user.posts_counter =%></p>
        </div>
      </a>
    </li>
  <% end %>
</ul>
