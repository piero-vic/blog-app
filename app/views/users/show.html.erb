<div class="flex flex-col gap-5">
  <div class="flex gap-5">
    <%= image_tag(@user.photo, :alt => "#{@user.name} Photo") %>
    <div class="flex flex-col justify-between grow border p-2">
      <p class="text-4xl"><%= @user.name %></p>
      <p class="text-xl self-end"><%= "Number of posts: #{@user.posts_counter || 0}" =%></p>
    </div>
  </div>

  <div class="border p-3">
    <h2 class="text-2xl">Bio</h2>
    <p class="mt-2"><%= @user.bio %></p>
  </div>

  <ul class="flex flex-col gap-5 my-5">
    <% @user.recent_posts.each do |post| %>
      <li>
        <a href=<%= "/users/#{@user.id}/posts/#{post.id}" %> class="block border p-3 flex flex-col gap-2">
          <h3 class="text-xl"><%= post.title %></h3>
          <p><%= post.text %></p>
          <p class="text-sm self-end"><%= "Comments: #{post.comments_counter || 0}, Likes: #{post.likes_counter || 0 }" %></p>
        </a>
      </li>
    <% end %>
  </ul>

  <a class="self-center p-3 border rounded-xl" href=<%= "/users/#{@user.id}/posts" %>>See All Posts</a>
</div>
